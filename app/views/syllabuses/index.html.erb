<h2 class="page-header">Syllabuses
  <div class="pull-right">
    <%= link_to 'New Syllabus', new_syllabus_path, :class => "btn btn-warning" %>
  </div>
</h2>

<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @syllabuses.each do |syllabus| %>
        <tr>
          <td><%= syllabus.name %></td>
          <td><%= syllabus.description %></td>
          <% name = Course.find(syllabus.course_id).name %>
          <td><%= name %></td>
          <td><%= link_to 'Show', syllabus %></td>
          <td><%= link_to 'Edit', edit_syllabus_path(syllabus) %></td>
          <td><%= link_to 'Destroy', syllabus, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
