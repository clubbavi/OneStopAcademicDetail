<h2 class="page-header">Chapters
  <div class="pull-right">
    <%= link_to 'New Chapter', new_chapter_path, :class => "btn btn-warning" %>
  </div>
</h2>

<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Syllabus</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @chapters.each do |chapter| %>
        <tr>
          <td><%= chapter.name %></td>
          <td><%= chapter.description %></td>
          <td><%= chapter.syllabus_id %></td>
          <td><%= link_to 'Show', chapter %></td>
          <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
          <td><%= link_to 'Destroy', chapter, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
