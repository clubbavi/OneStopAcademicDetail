<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Panel title</h3>
    </div>
    <div class="panel-body">
      Panel content
    </div>
  </div>





  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :short_form %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
