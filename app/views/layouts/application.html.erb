<!DOCTYPE html>
<html>
<head>
  <title>OneStopAcademicDetail</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <style type="text/css">
      .projectTitle{
          font-size:20px;padding-left:15px;padding-top:10px;
      }
  </style>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle projectToggle" data-toggle="collapse" data-target=".navbar-collapse" >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <p class="projectTitle"><span style="color:#F7A11A">OneStop</span><span style="color:#fff">Education</span></p>
    </div>
    <% if current_user %>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/courses">Courses</a></li>
            <li><a href="/syllabuses">Syllabus</a></li>
            <li><a href="/chapters">Chapters</a></li>
            <li><a href="/users">Students</a></li>
            <li><a href="/sign_out"><span>Logout</span></a></li>
          </ul>
        </div>
    <% end %>
  </div>
</div>
<div class="container" style="margin-top: 5%">
  <%= yield %>
</div>

</body>
</html>
